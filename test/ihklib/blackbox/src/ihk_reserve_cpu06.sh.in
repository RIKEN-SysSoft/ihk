#!/usr/bin/bash

. @CMAKE_INSTALL_PREFIX@/bin/util.sh

# define WORKDIR
SCRIPT_PATH=$(readlink -m "${BASH_SOURCE[0]}")
AUTOTEST_HOME="${SCRIPT_PATH%/*/*/*}"
if [ -f ${AUTOTEST_HOME}/bin/config.sh ]; then
    . ${AUTOTEST_HOME}/bin/config.sh
else
    WORKDIR=$(pwd)
fi

memleak_pro

# insmod as root
sudo @CMAKE_INSTALL_PREFIX@/bin/ihk_reserve_cpu06 -u $(id -u) -g $(id -g) -i || exit $?

# try to reserve memory as non-root
@CMAKE_INSTALL_PREFIX@/bin/ihk_reserve_cpu06 -u $(id -u) -g $(id -g) || exit $?

# rmmod as root
sudo @CMAKE_INSTALL_PREFIX@/bin/ihk_reserve_cpu06 -u $(id -u) -g $(id -g) -r || exit $?

memleak_epi

exit 0
