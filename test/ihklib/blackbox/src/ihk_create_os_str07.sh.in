#!/usr/bin/bash

# define WORKDIR
SCRIPT_PATH=$(readlink -m "${BASH_SOURCE[0]}")
AUTOTEST_HOME="${SCRIPT_PATH%/*/*/*}"
if [ -f ${AUTOTEST_HOME}/bin/config.sh ]; then
    . ${AUTOTEST_HOME}/bin/config.sh
else
    WORKDIR=$(pwd)
fi

for i in {0..2}; do
    sudo @CMAKE_INSTALL_PREFIX@/bin/ihk_create_os_str07 -i $i || exit $?

    if (( i == 0 )) || (( i == 1 )); then
	karg=ihk_create_os_str07
    elif (( i == 2 )); then
	karg=time_sharing
    fi

    sudo @WITH_MCK@/sbin/ihkosctl 0 kmsg | awk '/KCommand Line/ && /hidos/ && /allow_oversubscribe/ && /'"$karg"'/ { print; found = 1 } END { exit found ? 0 : 1 }'
    ret=$?

    if (( ret == 0)); then
	printf "[  OK  ] "
    else
	printf "[  NG  ] "
    fi

    echo "$karg included in kargs"

    sudo @WITH_MCK@/sbin/mcstop+release.sh
    (( ret != 0 )) && exit $ret
done

exit 0
